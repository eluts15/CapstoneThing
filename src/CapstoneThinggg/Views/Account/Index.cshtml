@using System.Security.Claims
@using Forum.ViewModels

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*User views the page, has the option of navigating to a page*@
<style>

</style>
<div class="signin center-panel">

    @if (User.Identity.IsAuthenticated)
    {
        <h4>Hello @User.Identity.Name!</h4> 

    }
    else
    {
        <div class="center">
            <h4>@Html.ActionLink("Create a free Account", "Register")</h4>
            <h4>Already a member? @Html.ActionLink("Sign In", "Login")</h4>
        </div>
    }
</div>


